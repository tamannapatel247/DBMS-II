CREATE TABLE Employee (
    EID INT PRIMARY KEY,
    EName VARCHAR(100),
    Gender VARCHAR(10),
    JoiningDate DATETIME,
    Salary DECIMAL(8,2),
    City VARCHAR(100)
);

INSERT INTO Employee VALUES
